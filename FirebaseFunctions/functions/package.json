{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:ci": "expo lint",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf lib",
    "deploy:submitPrayerFunctions": "yarn clean && tsc && firebase deploy --only functions:submitPrayerWithPoints,functions:submitPrayerPointWithLink,functions:updatePrayerPointTopicLinks,functions:deleteEntity",
    "deploy:vectorFunctions": "yarn clean && tsc && firebase deploy --only functions:vectorFunctions",
    "deploy:openAIFunctions": "yarn clean && tsc && firebase deploy --only functions:analyzePrayerContent",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:submitPrayerFunctions": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest src/submitPrayers/submitPrayerFunctions.test.ts",
    "test:vectorFunctions": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest src/vector/vectorFunctions.test.ts",
    "test:openAIFunctions": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest src/aiServices/openAIFunctions.test.ts"
  },
  "engines": {
    "node": "20"
  },
  "type": "module",
  "main": "lib/index.js",
  "dependencies": {
    "dotenv": "^16.5.0",
    "firebase": "^11.6.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.3.2",
    "openai": "^4.95.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.25.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "firebase-functions-test": "^3.4.1",
    "firebase-tools": "^14.3.1",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "private": true
}
